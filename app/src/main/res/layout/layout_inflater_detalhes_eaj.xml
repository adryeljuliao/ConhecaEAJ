<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_weight="1"
        android:id="@+id/textNomeLocalInflar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="NOME"/>

    <ImageView
        android:id="@+id/imgLocalInflar"
        android:background="#999"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_width="200dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textDescricaoLocalInflar"
                    android:layout_weight="9.9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <View
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#d90d0d"/>
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textHorarioLocalInflar"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Horario: 10h - 13h"/>

        <TextView
            android:id="@+id/textResponsavelLocalInflar"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ResponsÃ¡vel: Luiz Fernando"/>
    </LinearLayout>
    <ImageView
        android:src="@android:drawable/ic_menu_mapmode"
        android:layout_margin="10dp"
        android:id="@+id/imgMapaLocalInflar"
        android:layout_gravity="center|right"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

</LinearLayout>